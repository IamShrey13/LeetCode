class Solution {
public:
    bool isSumEqual(string firstWord, string secondWord, string targetWord) {
        auto convert = [&](string s) {
            long long value = 0;
            for (char c : s) {
                value = value * 10 + (c - 'a');
            }
            return value;
        };

        long long a = convert(firstWord);
        long long b = convert(secondWord);
        long long c = convert(targetWord);

        return (a + b == c);
    }
};
